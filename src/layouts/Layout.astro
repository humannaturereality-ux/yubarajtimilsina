---
import "../styles/global.css";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Human-Nature-Reality Movement: A Mirror of Urgency into What It Is. GAN (Guru-Antiguru-Nonguru) | ANU (Artificial-Natural-Universal Intelligence)."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/hnr-logo.png" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600;700&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap"
            rel="stylesheet"
        />
    </head>
    <body
        class="font-outfit antialiased selection:bg-purple-900 selection:text-white"
    >
        <!-- Cosmic Background (Fixed) -->
        <div
            class="fixed inset-0 z-[-10] overflow-hidden pointer-events-none bg-black"
        >
            <!-- New Cosmic Background Image -->
            <div class="absolute inset-0 z-0">
                <img
                    src="/cosmic-space-bg.png"
                    alt="Cosmic Space Background"
                    class="w-full h-full object-cover object-center opacity-70"
                />
            </div>

            <!-- Orbit Lines (Subtle Space Feel) -->
            <div
                class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 z-10 flex items-center justify-center scale-150 opacity-10 mix-blend-screen"
            >
                <div
                    class="w-[80vw] h-[80vw] border border-cyan-500/10 rounded-full absolute animate-spin-slow"
                    style="animation-duration: 60s;"
                >
                </div>
                <div
                    class="w-[60vw] h-[60vw] border border-purple-500/10 rounded-full absolute animate-spin-slow"
                    style="animation-duration: 45s;"
                >
                </div>
                <div
                    class="w-[40vw] h-[40vw] border border-blue-500/10 rounded-full absolute animate-spin-slow"
                    style="animation-duration: 30s;"
                >
                </div>
            </div>

            <!-- Deep Space Gradient Overlay -->
            <div
                class="absolute inset-0 bg-gradient-to-b from-black/40 via-transparent to-black/90 z-20"
            >
            </div>
        </div>

        <slot />
    </body>
</html>
