                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 10h.01M12 10h.01M16 10h.01M9 16H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-5l-5 5v-5z"
                ></path></svg
            >
        </button>
    </div>

    <script>
        // --- CHATBOT LOGIC ---
        const toggleChatBtn = document.getElementById("toggle-chat");
        const closeChatBtn = document.getElementById("close-chat");
        const chatWindow = document.getElementById("chat-window");
        const chatInput = document.getElementById("chat-input");
        const sendChatBtn = document.getElementById("send-chat");
        const chatMessages = document.getElementById("chat-messages");

        if (toggleChatBtn && chatWindow) {
            toggleChatBtn.addEventListener("click", () => {
                chatWindow.classList.toggle("hidden");
                if (!chatWindow.classList.contains("hidden")) {
                    toggleChatBtn.classList.remove("animate-bounce");
                }
            });
            closeChatBtn?.addEventListener("click", () => {
                chatWindow.classList.add("hidden");
            });
        }

        const handleSend = () => {
            const text = chatInput?.value.trim();
            if (!text) return;

            // User Message
            const userMsg = document.createElement("div");
            userMsg.className = "text-right";
            userMsg.innerHTML = `<div class="bg-cyan-600 text-white p-3 rounded-lg rounded-tr-none inline-block max-w-[85%] text-sm shadow-lg">${text}</div>`;
            chatMessages?.appendChild(userMsg);

            if (chatInput) chatInput.value = "";
            chatMessages?.scrollTo({
                top: chatMessages.scrollHeight,
                behavior: "smooth",
            });

            // Auto Reply
            setTimeout(() => {
                const botMsg = document.createElement("div");
                botMsg.className = "text-left";
                let replyText = "I am listening...";
                const lower = text.toLowerCase();

                if (lower.includes("hello") || lower.includes("namaste"))
                    replyText =
                        "Namaste! The universe greets the universe within you.";
                else if (lower.includes("gan"))
                    replyText =
                        "GAN stands for Guru-Antiguru-Nonguru. It's the play of teaching, breaking, and being. Which one do you feel today?";
                else if (lower.includes("anu"))
                    replyText =
                        "ANU represents the synthesis of Artificial and Natural Intelligence into Universal Intelligence. UI = AI + NI.";
                else if (lower.includes("reality"))
                    replyText =
                        "Reality is What Is. Not what we think it is, or what we want it to be. Just What Is.";
                else if (lower.includes("join") || lower.includes("how to"))
                    replyText =
                        "You can join by filling the form below or exploring the resources. Participation is observation.";
                else
                    replyText =
                        "Your perspective is a unique ripple in the cosmic ocean. Keep reflecting.";

                botMsg.innerHTML = `<div class="bg-white/10 backdrop-blur-md p-3 rounded-lg rounded-tl-none inline-block max-w-[85%] border border-white/5 shadow-xl"><p class="text-sm text-gray-200">${replyText}</p></div>`;
                chatMessages?.appendChild(botMsg);
                chatMessages?.scrollTo({
                    top: chatMessages.scrollHeight,
                    behavior: "smooth",
                });
            }, 1000);
        };

        sendChatBtn?.addEventListener("click", handleSend);
        chatInput?.addEventListener("keypress", (e) => {
            if (e.key === "Enter") handleSend();
        });

        // --- FORM LOGIC ---
        const joinForm = document.getElementById("join-form");
        const successMsg = document.getElementById("success-msg");
        const resetFormBtn = document.getElementById("reset-form");

        joinForm?.addEventListener("submit", (e) => {
            e.preventDefault();
            // Simulate API call
            const submitBtn = document.getElementById("submit-join");
            if (submitBtn && submitBtn instanceof HTMLButtonElement) {
                submitBtn.innerHTML =
                    '<span class="animate-pulse">Connecting to Source...</span>';
                submitBtn.style.opacity = "0.7";
                submitBtn.disabled = true;
            }

            setTimeout(() => {
                successMsg?.classList.remove("hidden");
                // Save to localStorage (just for fun)
                const nameInput = document.getElementById(
                    "name",
                ) as HTMLInputElement | null;
                const name = nameInput?.value || "Seeker";
                localStorage.setItem("hnr_member", name);
                if (submitBtn) {
                    submitBtn.innerHTML = "Sent";
                }
            }, 1500);
        });

        resetFormBtn?.addEventListener("click", () => {
            successMsg?.classList.add("hidden");
            if (joinForm) (joinForm as HTMLFormElement).reset();
            const submitBtn = document.getElementById("submit-join");
            if (submitBtn && submitBtn instanceof HTMLButtonElement) {
                submitBtn.innerHTML = "<span>Enter the Flow</span>";
                submitBtn.style.opacity = "1";
                submitBtn.disabled = false;
            }
        });

        // --- NAVIGATION LOGIC (REMOVED MOBILE MENU) ---

        // --- MOVEMENT CLICK LOGIC (REMOVED - NOW HOVER) ---
        // User requested to change this to simple hover in the latest step.

        // --- CHATBOT LOGIC ---
        const btnEn = document.getElementById("lang-en");
        const btnNe = document.getElementById("lang-ne");

        // Select all translatable elements (text and placeholders)
        const getTranslatables = () =>
            document.querySelectorAll(
                "[data-en][data-ne], [data-en-placeholder][data-ne-placeholder]",
            );

        function setLanguage(lang: string) {
            if (lang === "ne") {
                btnNe?.classList.add("bg-white/20", "text-white");
                btnNe?.classList.remove("text-gray-400");
                btnEn?.classList.remove("bg-white/20", "text-white");
                btnEn?.classList.add("text-gray-400");

                getTranslatables().forEach((el) => {
                    if (el instanceof HTMLElement) {
                        // Handle Text
                        if (el.dataset.ne) {
                            el.style.transition = "opacity 0.2s ease-in-out";
                            el.style.opacity = "0";
                            setTimeout(() => {
                                el.textContent = el.dataset.ne || "";
                                el.style.opacity = "1";
                                // Clear inline style after transition to let CSS hover states work
                                setTimeout(() => {
                                    el.style.removeProperty("opacity");
                                    el.style.removeProperty("transition");
                                }, 300);
                            }, 200);
                        }
                        // Handle Placeholder
                        if (
                            el.dataset.nePlaceholder &&
                            (el instanceof HTMLInputElement ||
                                el instanceof HTMLTextAreaElement)
                        ) {
                            el.placeholder = el.dataset.nePlaceholder;
                        }
                    }
                });
            } else {
                btnEn?.classList.add("bg-white/20", "text-white");
                btnEn?.classList.remove("text-gray-400");
                btnNe?.classList.remove("bg-white/20", "text-white");
                btnNe?.classList.add("text-gray-400");

                getTranslatables().forEach((el) => {
                    if (el instanceof HTMLElement) {
                        // Handle Text
                        if (el.dataset.en) {
                            el.style.transition = "opacity 0.2s ease-in-out";
                            el.style.opacity = "0";
                            setTimeout(() => {
                                el.textContent = el.dataset.en || "";
                                el.style.opacity = "1";
                                // Clear inline style after transition to let CSS hover states work
                                setTimeout(() => {
                                    el.style.removeProperty("opacity");
                                    el.style.removeProperty("transition");
                                }, 300);
                            }, 200);
                        }
                        // Handle Placeholder
                        if (
                            el.dataset.enPlaceholder &&
                            (el instanceof HTMLInputElement ||
                                el instanceof HTMLTextAreaElement)
                        ) {
                            el.placeholder = el.dataset.enPlaceholder;
                        }
                    }
                });
            }
        }

        btnEn?.addEventListener("click", () => setLanguage("en"));
        btnNe?.addEventListener("click", () => setLanguage("ne"));
    </script>

